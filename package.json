{
  "name": "hapi-react",
  "version": "0.0.1",
  "description": "React application with hapi server",
  "main": "app.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "rimraf dist && webpack-dev-server --host 0.0.0.0 --watch-poll --inline --hot",
    "nserver": "NODE_ENV=production node ./src/server/server.js",
    "server": "forever start ./src/server/server.js",
    "stop": "forever stopall",
    "build": "webpack --config ./webpack.production.config.js --progress --profile --colors",
    "lint": "eslint --ext .jsx src/client; exit 0"
  },
  "author": "Dayne Davis",
  "license": "MIT",
  "dependencies": {
    "forever": "^0.15.3",
    "hapi": "^16.4.3",
    "inert": "^4.0.3",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-router": "^4.1.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.1.1",
    "babel-jscs": "^3.0.0-beta1",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-react-hmre": "^1.1.0",
    "babel-preset-stage-2": "^6.18.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.12.1",
    "eslint-plugin-react": "^6.8.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.24.1",
    "react-hot-loader": "^3.0.0-beta.7",
    "rimraf": "^2.6.1",
    "style-loader": "^0.13.1",
    "webpack": "^3.1.0",
    "webpack-dev-server": "^2.5.1"
  }
}
